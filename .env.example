# .env.example - Copy to .env and fill in values

# LLM Configuration
LLM_MODEL_PRIMARY=models/phi-3.5-mini-instruct-q4.gguf
LLM_MODEL_SECONDARY=models/mistral-7b-instruct-v0.3.Q4_K_M.gguf
LLM_N_GPU_LAYERS=-1
LLM_N_CTX=2048
LLM_TEMPERATURE=0.7

# Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

CHROMA_PERSIST_DIRECTORY=./data/chroma

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WS_PORT=8765

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cuda

# Activity Monitor
ACTIVITY_MONITOR_ENABLED=false
ACTIVITY_MONITOR_INTERVAL=60

# RAG Configuration
RAG_SEARCH_PROVIDER=duckduckgo
RAG_MAX_RESULTS=3
RAG_REQUEST_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/nire.log

# Feature Flags (for development)
FEATURE_MODEL_SWITCHING=true
FEATURE_STYLE_ADAPTATION=true
FEATURE_ACTIVITY_MONITOR=false
